# Server Configuration
PORT=3001
NODE_ENV=development

# InfluxDB Configuration
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your-influx-token-here
INFLUX_ORG=your-org
INFLUX_BUCKET=your-bucket

# InfluxDB Price Bucket (optional - defaults to INFLUX_BUCKET if not specified)
# Set this if your energy price data is in a separate bucket
INFLUX_PRICE_BUCKET=energy_prices

# InfluxDB Measurement Names
INFLUX_CONSUMPTION_MEASUREMENT=energy_consumption
INFLUX_PRODUCTION_MEASUREMENT=solar_production
INFLUX_PRICE_MEASUREMENT=electricity_price
INFLUX_P1_MEASUREMENT=p1_meter

# Price Data Configuration
# Country code for filtering energy prices (ISO 3166-1 alpha-2)
INFLUX_PRICE_COUNTRY=BE

# EVCC Configuration (optional)
EVCC_URL=http://localhost:7070
EVCC_ENABLED=false

# Fluvius Capacity Tariff (Belgium/Flanders)
# These rates are for 2024 - update as needed
FLUVIUS_CAPACITY_TARIFF_MONTHLY=3.07
FLUVIUS_CAPACITY_TARIFF_YEARLY=36.84
# Peak calculation period (in months, default 12 for yearly average)
FLUVIUS_PEAK_CALCULATION_PERIOD=12

# Dynamic Tariff Configuration
# Default prices (EUR per kWh) - will be overridden by InfluxDB data if available
DEFAULT_ELECTRICITY_PRICE=0.30
DEFAULT_FEEDIN_PRICE=0.05

# Solar Panel Configuration
SOLAR_CAPACITY_KWP=10.0

# Regional Settings
TIMEZONE=Europe/Brussels
CURRENCY=EUR
